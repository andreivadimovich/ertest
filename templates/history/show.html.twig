{% extends 'base.html.twig' %}

{% block title %}History{% endblock %}

{% block body %}
    <h1>History</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ history.id }}</td>
            </tr>
            <tr>
                <th>Took</th>
                <td>{{ history.took ? history.took|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Gave</th>
                <td>{{ history.gave ? history.gave|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('history_index') }}">back to list</a>

    <a href="{{ path('history_edit', {'id': history.id}) }}">edit</a>

    {{ include('history/_delete_form.html.twig') }}
{% endblock %}
